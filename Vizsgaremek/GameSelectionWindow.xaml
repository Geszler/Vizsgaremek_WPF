<Window x:Class="Vizsgaremek.GameSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Játék kiválasztás"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="#1E1E1E">


    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1ABC9C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DropShadowEffect x:Key="SofterGlow"
                          Color="#80E0FFFF"
                          BlurRadius="8"
                          Direction="0"
                          ShadowDepth="0"
                          Opacity="0.5"/>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="500">
            <TextBlock Text="🎮 Válassz egy játékot"
                       FontSize="40"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,40"
                       TextWrapping="NoWrap"
                       TextTrimming="None"
                       ClipToBounds="False"
                       Effect="{StaticResource SofterGlow}"
                       TextOptions.TextFormattingMode="Ideal"
                       TextOptions.TextRenderingMode="ClearType"/>

            <Button Content="🟩 Wordle"
                    Click="Wordle_Click"
                    Style="{StaticResource MenuButtonStyle}" />

            <Button Content="🐍 Snake"
                    Click="Snake_Click"
                    Style="{StaticResource MenuButtonStyle}" />

            <Button Content="🐤 Flappy Bird"
                    Click="FlappyBird_Click"
                    Style="{StaticResource MenuButtonStyle}" />

            <Button Content="🏆 Leaderboard"
                    Click="Leaderboard_Click"
                    Style="{StaticResource MenuButtonStyle}" />

            <Button Content="🚪 Kijelentkezés"
                    Click="Logout_Click"
                    Style="{StaticResource MenuButtonStyle}"
                    Margin="0,30,0,0"
                    Background="#8B0000"/>
        </StackPanel>
    </Grid>
</Window>
