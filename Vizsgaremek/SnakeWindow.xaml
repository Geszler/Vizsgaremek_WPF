<Window x:Class="Vizsgaremek.SnakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        KeyDown="SnakeWindow_KeyDown"
        Loaded="SnakeWindow_Loaded"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Grid>
        <Canvas x:Name="GameCanvas"
                Width="696" Height="480"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />

        <TextBlock x:Name="ScoreText"
                   Text="Pontszám: 0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="20,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <Button x:Name="StartButton"
                Content="▶ Játék indítása"
                FontSize="20"
                FontWeight="Bold"
                Width="220"
                Height="60"
                Visibility="Visible"
                Cursor="Hand"
                Click="StartButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FF2C3E50"
                Foreground="White"
                BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" />
            </Button.Effect>
        </Button>

        <Button x:Name="BackButton"
                Content="⟵"
                Width="40"
                Height="40"
                FontSize="18"
                Visibility="Collapsed"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="BackButton_Click"/>
    </Grid>
</Window>
