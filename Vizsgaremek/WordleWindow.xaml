<Window x:Class="Vizsgaremek.WordleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wordle"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#1E1E1E">

    <Window.Resources>
        <DropShadowEffect x:Key="GlowEffect"
                          Color="#AA00FFFF"
                          BlurRadius="6"
                          ShadowDepth="0"
                          Opacity="0.5" />

        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3A3A3C"/>
            <Setter Property="BorderBrush" Value="#00BCD4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#00FFFF"/>
                    <Setter Property="Background" Value="#505052"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A2A2C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="40">

            <TextBlock Text="WORDLE"
                       FontSize="64"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Effect="{StaticResource GlowEffect}"
                       Margin="0,30,0,20"/>

            <TextBlock x:Name="ScoreText"
                       Text="Pontszám: 0"
                       FontSize="20"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <Grid x:Name="GameGrid" Margin="0,0,0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <TextBox x:Name="GuessInput"
                     FontSize="24"
                     Height="48"
                     Width="250"
                     MaxLength="5"
                     CharacterCasing="Upper"
                     TextAlignment="Center"
                     KeyDown="GuessInput_KeyDown"
                     Margin="0,0,0,10"
                     Background="#303030"
                     Foreground="White"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#00BCD4"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="SubmitButton"
                        Content="Küldés"
                        Width="120"
                        Style="{StaticResource FlatButtonStyle}"
                        Click="SubmitButton_Click"/>
                <Button Content="Vissza a menübe"
                        Width="160"
                        Style="{StaticResource FlatButtonStyle}"
                        Click="BackToMenu_Click"/>
            </StackPanel>

            <TextBlock x:Name="MessageText"
                       FontSize="18"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</Window>
