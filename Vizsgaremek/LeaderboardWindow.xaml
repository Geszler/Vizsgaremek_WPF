<Window x:Class="Vizsgaremek.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Vizsgaremek.Converters"
        Title="Leaderboard"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#1E1E1E"
        Loaded="Window_Loaded">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">

            <TextBlock Text="🎖️ Ranglista"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <ListView x:Name="LeaderboardList"
                      Width="700"
                      Background="Transparent"
                      BorderThickness="0"
                      FontSize="18"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="Background" Value="#333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Rank, StringFormat={}{0}.}"
                                       Grid.Column="0"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="{Binding Username}"
                                       Grid.Column="1"
                                       FontSize="18"
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="{Binding Score}"
                                       Grid.Column="2"
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>

                            <Button Content="Törlés"
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    Padding="8,2"
                                    Background="#D9534F"
                                    Foreground="White"
                                    Tag="{Binding}"
                                    Click="DeleteUser_Click"
                                    Visibility="{Binding Username, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=admin}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Vissza"
                    Width="120"
                    Height="40"
                    Margin="0,20,0,0"
                    FontSize="16"
                    Click="Back_Click"
                    Background="#3A3A3C"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
